<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@drawable/purple_eye">
    <Button android:layout_width="wrap_content" android:onClick="onClick" android:layout_height="wrap_content" android:layout_alignBaseline="@+id/videoTryAgainButton" android:layout_alignBottom="@+id/videoTryAgainButton" android:layout_alignParentLeft="true" android:text="Keep Video" android:id="@+id/keepVideoButton"></Button>
    <Button android:text="Try Again" android:layout_width="wrap_content" android:onClick="onClick" android:id="@+id/videoTryAgainButton" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:layout_alignRight="@+id/videoSurface" android:layout_marginBottom="14dp"></Button>
    <Button android:text="Play Video" android:layout_width="wrap_content" android:onClick="onClick" android:id="@+id/videoPlaybackButton" android:layout_height="wrap_content" android:layout_alignBaseline="@+id/videoTryAgainButton" android:layout_alignBottom="@+id/videoTryAgainButton" android:layout_centerHorizontal="true"></Button>
    <Button android:text="Record Video" android:layout_height="wrap_content" android:id="@+id/recordVideoButton" android:layout_width="wrap_content" android:onClick="onClick" android:layout_alignBaseline="@+id/videoPlaybackButton" android:layout_alignBottom="@+id/videoPlaybackButton" android:layout_centerHorizontal="true"></Button>
    <Button android:text="Stop Recording" android:layout_height="wrap_content" android:id="@+id/videoStopButton" android:layout_width="wrap_content" android:onClick="onClick" android:layout_alignTop="@+id/videoPlaybackButton" android:layout_centerHorizontal="true"></Button>
    
</RelativeLayout>
