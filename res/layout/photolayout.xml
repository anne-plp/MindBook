<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignBaseline="@+id/savePhotoButton" android:layout_alignBottom="@+id/savePhotoButton" android:layout_alignRight="@+id/cameraSurface" android:text="Try Again" android:id="@+id/cameraTryAgainButton" android:onClick="onClick"></Button>
    <Button android:background="@drawable/shutter_start" android:layout_height="wrap_content" android:id="@+id/takePhotoButton" android:layout_width="wrap_content" android:onClick="onClick" android:layout_alignBaseline="@+id/savePhotoButton" android:layout_alignBottom="@+id/savePhotoButton" android:layout_centerHorizontal="true"></Button>
    <Button android:text="Save Picture" android:layout_height="wrap_content" android:id="@+id/savePhotoButton" android:layout_width="wrap_content" android:onClick="onClick" android:layout_alignParentBottom="true" android:layout_alignLeft="@+id/cameraSurface" android:layout_marginBottom="16dp"></Button>
    <SurfaceView android:layout_height="380dp" android:layout_width="300dp" android:id="@+id/cameraSurface" android:layout_above="@+id/cameraTryAgainButton" android:layout_centerHorizontal="true" android:layout_marginBottom="17dp"></SurfaceView>
    
</RelativeLayout>
